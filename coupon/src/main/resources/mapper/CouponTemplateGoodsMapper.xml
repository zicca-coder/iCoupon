<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zicca.icoupon.coupon.dao.mapper.CouponTemplateGoodsMapper">

    <sql id="table">
        t_coupon_template_goods
    </sql>

    <sql id="baseColumn">
        id,
        coupon_template_id,
        goods_id,
        shop_id
    </sql>

    <sql id="column">
        <include refid="baseColumn"/>,
        create_time,
        update_time,
        create_by,
        update_by,
        del_flag
    </sql>

    <sql id="insertValues">
        #{couponTemplateGoods.id},
        #{couponTemplateGoods.couponTemplateId},
        #{couponTemplateGoods.goodsId},
        #{couponTemplateGoods.shopId},
        #{couponTemplateGoods.createTime},
        #{couponTemplateGoods.updateTime},
        #{couponTemplateGoods.createBy},
        #{couponTemplateGoods.updateBy},
        #{couponTemplateGoods.delFlag}
    </sql>

    <insert id="insertCouponGoods">
        INSERT INTO
        <include refid="table"/>
        (
        <include refid="column"/>
        )
        VALUES (
        <include refid="insertValues"/>
        )
    </insert>

    <insert id="batchInsertCouponGoods">
        INSERT INTO
        <include refid="table"/>
        (
            <include refid="column"/>
        )
        VALUES
        <foreach item="couponTemplateGoods" index="index" collection="couponTemplateGoodsList" separator=",">
            (
            <include refid="insertValues"/>
            )
        </foreach>
    </insert>

    <delete id="deleteCouponGoods">
        DELETE FROM
        <include refid="table"/>
        WHERE
        <if test="couponTemplateId != null">
            coupon_template_id = #{couponTemplateId}
        </if>
        <if test="goodsId != null">
            AND goods_id = #{goodsId}
        </if>
        <if test="shopId != null">
            AND shop_id = #{shopId}
        </if>
    </delete>



</mapper>